@page "{id:int}"
@model Pinball.Web.Pages.Admin.Tables.CatalogModel
@{
    ViewData["Title"] = "Table Catalog";
}

<h2>Table Catalog @Model.TableCatalog.ID</h2>

<div class="row">
    <div class="col-lg-4">
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(m => m.TableCatalog.UploadDate)</dt>
            <dd>@Html.DisplayFor(m => m.TableCatalog.UploadDate) by @Model.TableCatalog.Uploader.UserName</dd>
        </dl>
    </div>
    @if (Model.TableCatalog.Publisher != null)
    {
    <div class="col-lg-4">
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(m => m.TableCatalog.PublishDate)</dt>
            <dd>@Html.DisplayFor(m => m.TableCatalog.PublishDate) by @Model.TableCatalog.Publisher.UserName</dd>
        </dl>
    </div>
    }
</div>

<div class="row">
    <div class="col-lg-12">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pinballTableList-tab" data-toggle="tab" href="#pinballTableList" aria-selected="true">Pinball Tables</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="abbreviationList-tab" data-toggle="tab" href="#abbreviationList" aria-selected="true">Abbreviations</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="pinballTableList" role="tabpanel" aria-labelledby="pinballTableList-tab">
                @if (Model.PinballTables.Any())
                {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.PinballTables[0].Id)</th>
                            <th>@Html.DisplayNameFor(m => m.PinballTables[0].Name)</th>
                            <th>@Html.DisplayNameFor(m => m.PinballTables[0].Manufacturer)</th>
                            <th>@Html.DisplayNameFor(m => m.PinballTables[0].IpdbUrl)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var table in Model.PinballTables)
                        {
                        <tr>
                            <td>@Html.DisplayFor(m => table.Id)</td>
                            <td>@Html.DisplayFor(m => table.DisplayName)</td>
                            <td>@Html.DisplayFor(m => table.Manufacturer)</td>
                            <td>@Html.DisplayFor(m => table.IpdbUrl)</td>
                        </tr>
                        }
                    </tbody>
                </table>
                }
                else
                {
                <p class="alert alert-info">There are no pinball tables available</p>
                }
            </div>
            <div class="tab-pane fade" id="abbreviationList" role="tabpanel" aria-labelledby="abbreviationList-tab">
                @if (Model.Abbreviations.Any())
                {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Abbreviations[0].Name)</th>
                            <th>@Html.DisplayNameFor(m => m.Abbreviations[0].TableID)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var abbr in Model.Abbreviations)
                        {
                        <tr>
                            <td>@Html.DisplayFor(m => abbr.Name)</td>
                            <td>@Html.DisplayFor(m => abbr.TableID)</td>
                        </tr>
                        }
                    </tbody>
                </table>
                }
                else
                {
                <p class="alert alert-info">There are no abbreviations available</p>
                }
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to list</a>
</div>